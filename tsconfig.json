// Inspired by react-typescript-chrome-extension-boilerplate
{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "noEmit": false,
    // "allowImportingTsExtensions": true,
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    // "forceConsistentCasingInFileNames": true,
    // "skipLibCheck": true,
  },
  "include": [ "index.ts" ],
  "exclude": ["node_modules"]
} 